RewriteEngine On

# Falls eine Datei oder ein Verzeichnis existiert, direkt aufrufen
RewriteCond %{REQUEST_FILENAME} -s [OR]
RewriteCond %{REQUEST_FILENAME} -l [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [NC,L]

# âš  WICHTIG: Erlaube PHP-Requests vor der Weiterleitung an Angular
RewriteCond %{REQUEST_URI} !^/backend/.*\.php$ [NC]

# Falls keine Datei oder kein Verzeichnis existiert, leite an Angular weiter
RewriteRule ^(.*)$ /index.html [NC,L]
